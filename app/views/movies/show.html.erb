<div class="row">
  <h1>Movie</h1>
  <p>
    <b>Title: </b>
    <%= @movie.title %>
  </p>

  <p>
    <b>Summary: </b>
    <%= @movie.summary %>
  </p>

  <div class="form-actions">
    <%= link_to 'Back', movies_path, :class => 'btn btn-mini'  %>
    <%= link_to 'Edit Movie', edit_movie_path(@movie), :class => 'btn btn-mini' %>
    <%= link_to 'Delete Movie', movie_path(@movie), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-mini' %>
  </div>

<h2>Pictures</h2>
</div>

<div class="row">
  <ul class="thumbnails files">
<% unless @pictures.empty? %>
  <% @pictures.each do |pic| %>
    <li class="span3">
    <div class="thumbnail">
      <%= image_tag pic.image.url %>
      <div class="caption">
        <p style="text-align: center;">
        <%=
          link_to "Delete picture", pic,
            :data => { :confirm => "Are you sure?" },
            :method => :delete
          %>

        </p>
      </div>
    </div>
    </li>
  <% end %>
<% end %>
</ul>
</div>
